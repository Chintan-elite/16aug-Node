    <script>

        function getdata(value) {

            if (value === "cancel") {

                var row = "";
                row = row + "<div class='form-group'><label> Home</label ><select name='home' id='home' class='form-control'><option value='ii'>hii</option><select></div><div class='form - group'< label for= '' > Date</label ><input type='date' name='date' class='form-control'></div>"

                // document.getElementById("mydata").innerHTML(row)
                $("#mydata").html(row)
            }
            else if (value === "sell") {

                var homeoption = "";
                var useroption = "";
                $.get("/availableHome", {}, function (rt) {



                    for (var i = 0; i < rt.data.length; i++) {
                        homeoption = homeoption + "<option value=" + rt.data[i].homename + ">" + rt.data[i].homename + "</option>"
                    }

                    for (var i = 0; i < rt.user.length; i++) {
                        useroption = useroption + "<option value=" + rt.user[i].uname + ">" + rt.user[i].uname + "</option>"
                    }




                    var row = "";
                    row = row + "<div class='form-group'><label> Home</label ><select name='home' id='home' class='form-control'>" + homeoption + "<select></div><div class='form-group'><label>User</label><select name='user' id='user' class='form-control'>" + useroption + "</select></div ><div class='form - group'< label for= '' > Date</label ><input type='date' name='date' class='form-control'></div>"


                    $("#mydata").html(row)
                })
            }
            else if (value === "transfer") {
                var row = "";
                row = row + "<div class='form-group'><label> Home</label ><select name='home' id='home' class='form-control'><option value='ii'>hii</option><select></div><div class='form-group'><label>Transfer From</label><select name='user' id='user' class='form-control'><option value ='hii'> hii</option></select></div ><div class='form - group'< label for= '' > Date</label ><input type='date' name='date' class='form-control'></div>"


                $("#mydata").html(row)
            }
            else {
                $("#mydata").html("")
            }
        }

    </script>

